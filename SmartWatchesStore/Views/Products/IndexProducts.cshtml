@model List<Product>

@{
    ViewData["Title"] = "Products";
    Layout = "_Layout";
}

<section class="section gallery">
    <div class="container">
        <div class="row">       
            <div class="col-12 text-center mb-5">
                <h1 class="font-weight-bold">All latest Smart Watch</h1>
            </div>

            <div class="container-fluid">
                <form class="d-flex justify-content-center" role="search" method="get" asp-action="IndexProducts" asp-controller="Products">
                    <input name="searchString" class="form-control me-2 w-50 mr-3" type="search" placeholder="Search watches..." aria-label="Search">
                    <button class="btn btn-dark text-white align-content-center">Search</button>
                </form>

                <div class="mt-4 mb-5 pl-4 text-dark text-center">
                    <a class="text-dark" asp-action="IndexProducts">Back to Full List</a>
                </div>
            </div>            
            
            @foreach(var Product in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="block">
                        <div class="gallery-overlay">
                            <a asp-controller="Cart" asp-action="Add"
                               asp-route-id="@Product.Id" class="gallery-popup">
                                <i class="tf-ion-plus-round"></i>
                            </a>
                        </div>
                        <img class="img-fluid w-100"
                             src="data:image/*;base64,@(Convert.ToBase64String(Product.Poster))"
                             alt="@Product.Name" />
                    </div>
                    <div class="product-info">
                        <h4 class="mb-2">
                            <a asp-controller="Products" asp-action="Details"
                               asp-route-id="@Product.Id" class="link-title">@Product.Name</a>
                        </h4>
                        <p class="price">
                            $@Product.Price                            
                        </p>
                    </div>
                </div>
            }
                       
        </div>
    </div>
</section>