@model Product

@{
    ViewData["Title"] = Model.Name;
}

<section class="section">
    <div class="container">        
            <div class="row">
                <div class="col-md-5 mb-4 mb-md-0">
                    <div>
                        <img class="img-fluid w-100"
                             src="data:image/*;base64,@(Convert.ToBase64String(Model.Poster))"
                             alt="@Model.Name" />
                    </div>
                </div>
                <div class="col-lg-6 col-md-7 offset-lg-1">
                    <h1 class="mb-4">@Model.Name</h1>
                    <p><strong>Color: </strong>@Model.Color</p>
                    <p class="price py-4">$@Model.Price.ToString()</p>
                    <button type="submit" class="snipcart-add-item btn btn-main mb-5">
                        Add to Cart
                    </button>
                    <div class="content">
                        <p>
                            @Model.Description
                        </p>
                    </div>
                </div>
            </div>           
    </div>
</section>